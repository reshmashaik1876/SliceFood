<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s528761.slicefood.AdminSchedule">

    <ImageView
        android:id="@+id/scImgAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        app:srcCompat="@drawable/slicefood" />

    <Button
        android:id="@+id/mainBTAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="menuBTAd"
        android:text="Main Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76" />

    <GridLayout
        android:layout_width="241dp"
        android:layout_height="114dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.532">

        <TextView
            android:id="@+id/name00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="0"
            android:text="Name" />

        <TextView
            android:id="@+id/dayAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="0"
            android:text="Day" />

        <TextView
            android:id="@+id/hoursAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="0"
            android:text="Hours" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="1"
            android:text="John" />

        <TextView
            android:id="@+id/monAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="1"
            android:text="Monday" />

        <TextView
            android:id="@+id/t1Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="1"
            android:text="10Am-2Pm" />

        <TextView
            android:id="@+id/h1Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="1"
            android:text="4" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="2"
            android:text="Smith" />

        <TextView
            android:id="@+id/TueAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="2"
            android:text="Tuesday" />

        <TextView
            android:id="@+id/t2Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="2"
            android:text="1Pm-4Pm" />

        <TextView
            android:id="@+id/h2Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="2"
            android:text="3" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="3"
            android:text="Andrea" />

        <TextView
            android:id="@+id/wedAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="3"
            android:text="Wednesday" />

        <TextView
            android:id="@+id/t3Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="3"
            android:text="3pm-8Pm" />

        <TextView
            android:id="@+id/h3Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="3"
            android:text="5" />

        <TextView
            android:id="@+id/shiftAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:layout_marginLeft="2dp"
            android:layout_row="0"
            android:text="Shift" />


    </GridLayout>

</android.support.constraint.ConstraintLayout>
